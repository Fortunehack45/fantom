
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    //------------------------------------------------------------
    // Helper Functions
    //------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, this should check a custom claim or a list of admin UIDs in Firestore.
      return isSignedIn() && request.auth.token.email == 'fortunedomination@gmail.com';
    }
    
    // Checks if the user is the author of a document.
    function isAuthor(doc) {
      return isUser(doc.authorId);
    }
    
    // Helper for creating a user document.
    function isCreatingOwnUserDoc() {
        // This function is for the `create` rule, so `resource` does not exist yet.
        // We check the incoming `request.resource.data`.
        return request.resource.data.uid == request.auth.uid;
    }
    
    // Helper to check if a user is updating only their own profile, without escalating privileges.
    function isUpdatingOwnProfile() {
        return request.resource.data.verification == resource.data.verification;
    }
    
    // Helper for creating a chat. Ensures the creator is a participant.
    function isCreatingChatWithSelf() {
        return request.auth.uid in request.resource.data.users;
    }

    //------------------------------------------------------------
    // User Data & Profiles
    //------------------------------------------------------------
    match /users/{userId} {
      allow get, list; // Admin panel needs list permission
      allow create: if isUser(userId) && isCreatingOwnUserDoc();
      allow update: if (isUser(userId) && isUpdatingOwnProfile()) || isAdmin();
      allow delete: if isAdmin();
      
      match /followers/{followerId} {
        allow read, list;
        allow create, delete: if isUser(followerId) || isAdmin();
      }
      
      match /following/{followingId} {
        allow read, list;
        allow create, delete: if isUser(userId) || isAdmin();
      }
    }
    
    match /usernames/{username} {
      allow get;
      // Allow create if username in request matches username in the user's own document.
      allow create: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == username;
      allow delete: if isAdmin() || isUser(get(/databases/$(database)/documents/usernames/$(username)).data.uid);
    }

    //------------------------------------------------------------
    // Content: Blog Posts & Shorts
    //------------------------------------------------------------
    match /blogPosts/{postId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }
    
    match /shorts/{shortId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }

    //------------------------------------------------------------
    // Social: Comments & Replies
    //------------------------------------------------------------
    match /{path=**}/comments/{commentId} {
      allow read;
      allow create: if isSignedIn();
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }
    
    match /{path=**}/replies/{replyId} {
      allow read;
      allow create: if isSignedIn();
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }

    //------------------------------------------------------------
    // Private Messaging
    //------------------------------------------------------------
    match /chats/{chatId} {
      allow get, list, update: if (isSignedIn() && request.auth.uid in resource.data.users) || isAdmin();
      allow create: if isSignedIn() && isCreatingChatWithSelf();
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read;
        // User must be a participant in the parent chat to create a message.
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
        allow update, delete: if isAdmin(); // Only admins can edit/delete messages for moderation.
      }
    }
    
    //------------------------------------------------------------
    // Verification System
    //------------------------------------------------------------
    match /verificationRequests/{requestId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    //------------------------------------------------------------
    // Site-Wide Content (Admin-managed)
    //------------------------------------------------------------
    match /roster/{memberId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /announcements/{announcementId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /games/{gameId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /heroImages/{imageId} {
      allow read;
      allow write: if isAdmin();
    }

    match /timelineEvents/{eventId} {
      allow read;
      allow write: if isAdmin();
    }

    match /coreValues/{valueId} {
      allow read;
      allow write: if isAdmin();
    }

    match /galleryImages/{imageId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /siteSettings/{settingsId} {
      allow read;
      allow write: if isAdmin();
    }

    match /pageContent/{pageId} {
      allow read;
      allow write: if isAdmin();
    }
  }
}

    