rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    //------------------------------------------------------------
    // Helper Functions
    //------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, this would be a custom claim or a separate admin collection lookup.
      return isSignedIn() && request.auth.token.email == 'fortunedomination@gmail.com';
    }
    
    // Check if user is the author of a document that has an `authorId` field.
    function isAuthor(doc) {
      return isUser(doc.authorId);
    }
    
    //------------------------------------------------------------
    // User Data & Profiles
    //------------------------------------------------------------
    match /users/{userId} {
      // Allow anyone to get/list user profiles. This is needed for profile pages to work.
      allow read;
      
      // A user can only create their own user document.
      allow create: if isUser(userId) && request.resource.data.uid == request.auth.uid;
      
      // A user can update their own profile, but not their verification status. Admin can update anything.
      allow update: if (isUser(userId) && request.resource.data.verification == resource.data.verification) || isAdmin();
      
      // Only an admin can delete a user.
      allow delete: if isAdmin();
      
      match /followers/{followerId} {
        allow read, list;
        // A user can add/remove themself from another user's followers list.
        allow create, delete: if isUser(followerId) || isAdmin();
      }
      
      match /following/{followingId} {
        allow read, list;
        // A user can only manage their own following list.
        allow create, delete: if isUser(userId) || isAdmin();
      }
    }
    
    // Enforces unique usernames.
    match /usernames/{username} {
      allow get;
      // Can only create a username document if the username matches what's in their own user document.
      allow create: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == username;
      allow delete: if isAdmin() || isUser(get(/databases/$(database)/documents/usernames/$(username)).data.uid);
    }

    //------------------------------------------------------------
    // Content: Blog Posts & Shorts (Publicly Readable)
    //------------------------------------------------------------
    match /blogPosts/{postId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      // Allow author/admin to update the doc, or any signed in user to update ONLY the 'likes' array.
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }
    
    match /shorts/{shortId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      // Allow author/admin to update the doc, or any signed in user to update ONLY the 'likes' and 'shares' fields.
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'shares']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }

    //------------------------------------------------------------
    // Social: Comments & Replies (Publicly Readable)
    //------------------------------------------------------------
    match /{path=**}/comments/{commentId} {
      allow read;
      allow create: if isSignedIn();
      // Allow author/admin to update the doc, or any signed in user to update ONLY the 'likes' array.
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }
    
    match /{path=**}/replies/{replyId} {
      allow read;
      allow create: if isSignedIn();
      // Allow author/admin to update the doc, or any signed in user to update ONLY the 'likes' array.
      allow update: if (isAuthor(resource.data) || isAdmin()) ||
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isAuthor(resource.data) || isAdmin();
    }
    
    // Explicit admin write for collection groups to fix the "Fix User Data" batch updates.
    match /blogPosts/{postId}/comments/{commentId} { allow write: if isAdmin(); }
    match /shorts/{shortId}/comments/{commentId} { allow write: if isAdmin(); }
    match /blogPosts/{postId}/comments/{commentId}/replies/{replyId} { allow write: if isAdmin(); }

    //------------------------------------------------------------
    // Private Messaging
    //------------------------------------------------------------
    match /chats/{chatId} {
      // Allow read/update if the user is a participant in the chat.
      allow get, list, update: if (isSignedIn() && request.auth.uid in resource.data.users) || isAdmin();
      // Allow create if the user is one of the two participants being added.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.users && request.resource.data.users.size() == 2;
      allow delete: if isAdmin();

      match /messages/{messageId} {
        // Allow read/create if the user is a participant in the parent chat document.
        allow read, create: if (isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users) || isAdmin();
        allow update, delete: if isAdmin();
      }
    }
    
    //------------------------------------------------------------
    // Verification System
    //------------------------------------------------------------
    match /verificationRequests/{requestId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    //------------------------------------------------------------
    // Site-Wide Content (Publicly Readable, Admin-managed)
    //------------------------------------------------------------
    match /roster/{memberId} { allow read; allow write: if isAdmin(); }
    match /announcements/{announcementId} { allow read; allow write: if isAdmin(); }
    match /games/{gameId} { allow read; allow write: if isAdmin(); }
    match /heroImages/{imageId} { allow read; allow write: if isAdmin(); }
    match /timelineEvents/{eventId} { allow read; allow write: if isAdmin(); }
    match /coreValues/{valueId} { allow read; allow write: if isAdmin(); }
    match /galleryImages/{imageId} { allow read; allow write: if isAdmin(); }
    match /siteSettings/{settingsId} { allow read; allow write: if isAdmin(); }
    match /pageContent/{pageId} { allow read; allow write: if isAdmin(); }
  }
}
