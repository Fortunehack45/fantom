
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.email == 'fortunedomination@gmail.com';
    }
    
    function isOwner(resource) {
      return request.auth.uid == resource.data.authorId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow public read for all main content collections
    match /(blogPosts|roster|announcements|games|heroImages|timelineEvents|coreValues|galleryImages|siteSettings)/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Blog Post Comments and Replies
    match /blogPosts/{postId} {
      // Allow read for the post itself (covered by the rule above)
      allow read: if true;

      // Rules for the 'comments' subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isOwner(resource) || isAdmin();

        // Rules for the 'replies' sub-subcollection
        match /replies/{replyId} {
          allow read: if true;
          allow create: if isSignedIn();
          allow update, delete: if isOwner(resource) || isAdmin();
        }
      }
    }
  }
}
